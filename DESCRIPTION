Package: ipapi.r
Type: Package
Title: Retrieve and Analyze IP Address Information
Version: 1.0.0
Authors@R: c(
    person(
      "Jinhwan", "Kim",
      email = "hwanistic@gmail.com",
      role = c("aut", "cre")
    )
